#
###################################################

settings ={}
    RegExp = "RegExp::"
@
    
plugins =[{}]
    # include 'minify' plugin from plugins folder
    "minify" = "!plg:minify"
    # include 'doc' plugin from plugins folder
    "doc" = "!plg:doc"
@

tasks =[{}]
    
    build =[{}]
        
        src =[]
            
            !tpl:umd-header-single.tpl.js  # include a umd-header template
            ./src/types.js
            ./src/utils.js
            ./src/stream.js
            ./src/stack.js
            ./src/state.js
            ./src/tokenizers.js
            ./src/main.js
            !tpl:umd-footer.tpl.js  # include a umd-footer template

        @

        # extract header from this file
        header = ./src/main.js

        # do any replacements to the source (orderedmap)
        replace =[{}]

            "@@ROOT@@" = "this"
            "@@EXPORTS@@" = "exports"
            "@@VERSION@@" = "1.0.2"
            "@@MODULE_NAME@@" = "PrismGrammar"
            
        @

        out = ./build/prism_grammar.js
        
    @
    
    minify =[{}]
        
        src =[]
            
            ./build/prism_grammar.js
            
        @


        # extract documentation from the source (map)
        doc ={}
            "startdoc" = "/**[DOC_MARKDOWN]"
            "enddoc" = "[/DOC_MARKDOWN]**/"
            "trim" = RegExp::^\s*\*[ ]?
            "output" = "./api-reference.md"
        @


        # Minify the Package (map of lists)
        minify ={}

            # Options for Node UglifyJS Compiler (if used, default), (mangle and compress)
            uglifyjs =[]
                -m -c
            @

            # Options for Java Closure Compiler (if used)
            closure =[]
                "--language_in=ECMASCRIPT5_STRICT"
            @

            # Options for Java YUI Compressor Compiler (if used)
            yui =[]
                --preserve-semi
            @

        @

        out = ./build/prism_grammar.min.js
    
    @

@
